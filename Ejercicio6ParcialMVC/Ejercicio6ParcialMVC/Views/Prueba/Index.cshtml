@model Ejercicio6ParcialMVC.Models.calculo
@{
    ViewBag.Title = "Index";
}

<h2>Compra</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <h4>Ingrese la cantidad de articulos</h4>
        @Html.LabelFor(Model => Model.cantidad, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.cantidad, new { @class = "form-control", type = "text" })
    </div>
    <div class="form-group">
        <h4>Ingrese el Precio del articulo</h4>
        @Html.LabelFor(Model => Model.precio, new { @class = "control-label" })
        @Html.TextBoxFor(Model => Model.precio, new { @class = "form-control", type = "text" })
    </div>
   
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
    </div>
}
<br /> <br />
@if (ViewBag.resultado != null)
{
    <h4>
        El Descuento sera de:$ @Model.desc
    </h4>
    <h4>Eltotal a pagar con el descuento realizado es de:$ &nbsp;@ViewBag.resultado</h4>
   

}
